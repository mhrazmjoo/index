<!DOCTYPE html>
<html>
<body>


<h2>بدست آوردن ماه شمسی با وارد کردن شماره</h2>
<button onclick="myFunction()">کلیک کنید</button>

<h2 id="demo"></h2>

<script>
function myFunction() {
  
  const Number = prompt("عدد ماه شمسی مورد نظر خود را وارد کنید:");
  
  switch (Number) {
      case "1":
          text = 'فروردین';
          break;
      case "2":
          text = 'اردیبهشت';
          break;
      case "3":
          text = 'خرداد';
          break;
      case "4":
          text = 'تیر';
          break;

      case "5":
          text = 'مرداد';
          break;

      case "6":
          text = 'شهریور';
          break;

      case "7":
          text = 'مهر';
          break;

      case "8":
          text = 'آبان';
          break;

      case "9":
          text = 'آذر';
          break;

      case "10":
          text = 'دی';
          break;

      case "11":
          text = 'بهمن';
          break;

      case "12":
          text = 'اسفند';
          break;
      
          default:
    text = "عدد غیر مجاز";
  }

  document.getElementById("demo").innerHTML = text;
  
}
</script>

</body>
</html>